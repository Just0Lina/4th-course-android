<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6FB8BD"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#70B9BE">

        <TextView
            android:id="@+id/laterButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="34dp"
            android:clickable="true"
            android:fontFamily="@font/sofia_sans"
            android:paddingEnd="16dp"
            android:text="Later"
            android:textColor="@android:color/white"
            android:textSize="23sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/lines"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/ic_lines" />


        <ImageView
            android:id="@+id/decorativeImage1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginStart="-120dp"
            android:layout_marginTop="-70dp"
            android:src="@drawable/ic_egg" />

        <ImageView
            android:id="@+id/decorativeImage2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginStart="-100dp"
            android:layout_marginTop="150dp"
            android:src="@drawable/ic_cheese" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="129dp"
            android:layout_height="85dp"
            android:layout_gravity="center"
            android:layout_marginStart="100dp"
            android:layout_marginTop="-100dp"
            app:srcCompat="@drawable/ic_salmon" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="274dp"
            android:layout_height="329dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_dots" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="145dp"
            android:layout_height="121dp"
            android:layout_gravity="center"
            android:layout_marginStart="50dp"
            android:layout_marginTop="100dp"
            app:srcCompat="@drawable/ic_leg" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="65dp"
            android:layout_height="49dp"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:layout_marginTop="0dp"
            app:srcCompat="@drawable/ic_lemon" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="63dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginStart="-60dp"
            android:layout_marginTop="60dp"
            app:srcCompat="@drawable/ic_bean" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="10dp"
            android:layout_height="9dp"
            android:layout_gravity="center"
            android:layout_marginStart="70dp"
            android:layout_marginTop="170dp"
            app:srcCompat="@drawable/ic_dot" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/ic_dot2" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:layout_gravity="center"
            android:layout_marginStart="-120dp"
            android:layout_marginTop="0dp"
            app:srcCompat="@drawable/ic_leaf" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="160dp"
            android:layout_marginTop="200dp"
            app:srcCompat="@drawable/ic_leaf2" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="-90dp"
            android:layout_marginTop="-100dp"
            app:srcCompat="@drawable/ic_leaf4" />


        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="130dp"
            android:layout_marginTop="-45dp"
            app:srcCompat="@drawable/ic_leaf4" />

    </FrameLayout>


    <TextView
        android:id="@+id/taglineText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/sofia_sans"
        android:gravity="center"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:text="Help your path to health goals with happiness"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:backgroundTint="#042628"
        android:fontFamily="@font/sofia_sans"
        android:text="Login"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/createAccountText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:fontFamily="@font/sofia_sans"
        android:text="Create New Account"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:layout_marginBottom="50dp"/>

</LinearLayout>
